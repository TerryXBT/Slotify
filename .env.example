# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application URL (used for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Service Configuration
# Option 1: SMTP (e.g., Gmail, Mailpit, SendGrid SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password  # Format: xxxx xxxx xxxx xxxx (no spaces when entering)
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Option 2: Resend (recommended for production)
# RESEND_API_KEY=re_xxxxxxxxxxxx
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# Cron Job Security
CRON_SECRET=generate-a-random-secret-here

# Rate Limiting (optional - for production use Upstash)
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token

# Error Monitoring (Sentry - Free tier available)
NEXT_PUBLIC_SENTRY_DSN=https://xxxx@sentry.io/xxxx
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token

# Development Settings
# USE_SMTP=true  # Force SMTP even if Resend key is set
